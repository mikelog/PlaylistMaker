<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainMenuButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MessageTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="SettingsItemsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_weight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_marginStart">@dimen/settings_item_text_start</item>
        <item name="android:layout_marginTop">@dimen/settings_item_text_top</item>
        <item name="android:layout_marginEnd">@dimen/settings_item_text_end</item>
        <item name="android:layout_marginBottom">@dimen/settings_item_text_bottom</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="backButtonStyle">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>

    </style>
    <style name="ImageItemsSettingsStyle">
        <item name="android:layout_marginRight">@dimen/settings_item_icon_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="ItemsSettingsLayoutStyle">
        <item name="android:color">@color/yp_black</item>
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="RoundedArtwork">
        <item name="cornerSize">2dp</item>
    </style>
</resources>
