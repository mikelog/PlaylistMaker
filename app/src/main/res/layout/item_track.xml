<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artwork"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginStart="@dimen/marginStart_13"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedArtwork"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/colorOnSecondary"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Artist Name"
                android:textSize="11sp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/yp_gray_color"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_artist_time_delimiter_13"/>

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4:05"
                android:textSize="11sp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/yp_gray_color" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right_24"
        app:tint="?attr/yp_gray_color"
        android:layout_marginRight="@dimen/settings_item_icon_right"/>
</LinearLayout>
