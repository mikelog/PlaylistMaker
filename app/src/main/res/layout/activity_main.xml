<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/title_margin_top"
            android:layout_marginStart="@dimen/title_margin_left"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/title_margin_bottom"
            style="@style/MessageTextStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/subtitle_margin_bottom"
        android:layout_marginLeft="@dimen/left_right_margins_16"
        android:layout_marginRight="@dimen/left_right_margins_16"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:text="@string/search"
            android:id="@+id/btnSearch"
            app:icon="@drawable/ic_search_24"
            style="@style/mainMenuButtonsStyle"/>

        <Button
            android:id="@+id/btnMedia"
            android:text="@string/library"
            app:icon="@drawable/ic_media_24"
            style="@style/mainMenuButtonsStyle"
            />

        <Button
            android:id="@+id/btnSettings"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings_24"
            style="@style/mainMenuButtonsStyle"
            />
    </LinearLayout>
</LinearLayout>
